---
interface Props {
    actionIndicatorsPadding?: string;
    backgroundColor?: string;
    progressIndicatorGap?: string;
    progressIndicatorPadding?: string;
    progressIndicatorMargin?: string;
    progressIndicatorBorderRadius?: string;
    progressIndicatorBackgroundColor?: string;
}
const { 
    actionIndicatorsPadding: imageBrowserOverlayProgressIndicatorActionButtonsActionIndicatorsPadding = '0.125rem',
    progressIndicatorGap: imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorGap = '0.25rem',
    progressIndicatorPadding: imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorPadding = '0.25rem',
    progressIndicatorMargin: imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorMargin = '0.125rem',
    progressIndicatorBorderRadius: imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBorderRadius = '2rem',
    progressIndicatorBackgroundColor: imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBackgroundColor,
    backgroundColor: imageBrowserOverlayProgressIndicatorActionButtonsBackgroundColor,
} = Astro.props;
---

<div class="progress-indicator-action-buttons">
    <div class="progress-indicator-container">
        <div class="progress-indicator">
            <span class="progress-indicator-element index">
                <slot name="progress-indicator-index" />
            </span>
            <span class="progress-indicator-element of">
                <slot name="progress-indicator-of" />
            </span>
            <span class="progress-indicator-element total">
                <slot name="progress-indicator-total" />
            </span>
        </div>
    </div>
    <div class="action-indicators-container">
        <div class="action-indicators">
            <div class="action previous">
                <slot name="action-previous" />
            </div>
            <div class="action next">
                <slot name="action-next" />
            </div>
        </div>
    </div>
</div>

<style lang="scss" define:vars={{ imageBrowserOverlayProgressIndicatorActionButtonsActionIndicatorsPadding, imageBrowserOverlayProgressIndicatorActionButtonsBackgroundColor, imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorGap, imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorPadding, imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorMargin, imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBorderRadius, imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBackgroundColor }}>
    .progress-indicator-action-buttons {
        background-color: var(--imageBrowserOverlayProgressIndicatorActionButtonsBackgroundColor);
    }
    
    .progress-indicator-action-buttons {
        display: grid;

        > * {
            grid-area: 1 / 1 / 2 / 2;
        }
    }

    .progress-indicator-action-buttons .progress-indicator-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-items: center;
    }

    .progress-indicator-action-buttons .progress-indicator {
        display: flex;
        gap: var(--imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorGap);
        margin: var(--imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorMargin);
        padding: var(--imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorPadding);
        border-radius: var(--imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBorderRadius);
        background-color: var(--imageBrowserOverlayProgressIndicatorActionButtonsProgressIndicatorBackgroundColor);
    }

    .progress-indicator-action-buttons .progress-indicator-container,
    .progress-indicator-action-buttons .action-indicators-container {
        width: 100%;
    }

    .progress-indicator-action-buttons .action-indicators { 
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    .progress-indicator-action-buttons .action-indicators .action.previous,
    .progress-indicator-action-buttons .action-indicators .action.next {
        height: 100%;
        width: auto;
        padding: var(--imageBrowserOverlayProgressIndicatorActionButtonsActionIndicatorsPadding);
    }
</style>
