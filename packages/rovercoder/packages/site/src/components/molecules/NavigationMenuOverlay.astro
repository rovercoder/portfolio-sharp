---
interface Props {
    containerPadding?: string;
    backgroundColor?: string;
    navLinksItemsGap?: string;
}
const { 
    containerPadding: navigationMenuOverlayContainerPadding = '2rem', 
    backgroundColor: navigationMenuOverlayBackgroundColor = '#000000', 
    navLinksItemsGap: navigationMenuOverlayNavLinksItemsGap 
} = Astro.props;
---

<div class="overlay-navigation-menu-inner">
    <div class="nav-links-menu">
        <slot />
    </div>
</div>

<style define:vars={{ navigationMenuOverlayContainerPadding, navigationMenuOverlayBackgroundColor, navigationMenuOverlayNavLinksItemsGap }}>
    .overlay-navigation-menu-inner {
        background-color: var(--navigationMenuOverlayBackgroundColor);
        height: 100%;
        width: 100%;
        transition: 0.4s ease-in-out;
        overflow: hidden;
    }
    .nav-links-menu {
        height: 100%;
        width: 100%;
        padding: var(--navigationMenuOverlayContainerPadding);
        display: flex;
        flex-direction: column;
        align-items: stretch;
        justify-items: start;
        gap: var(--navigationMenuOverlayNavLinksItemsGap);
        overflow-y: scroll;
    }
</style>

<style is:global>
    .overlay:not(.shown) .overlay-navigation-menu-inner {
        padding: 0;
        height: 0;
    }
</style>
