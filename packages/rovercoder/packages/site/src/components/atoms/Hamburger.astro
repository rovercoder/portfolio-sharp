---
interface Props {
    color: string;
}
const { color } = Astro.props;
---

<div class="hamburger">
    <div class="line"></div>
    <div class="line"></div>
    <div class="line"></div>
</div>

<style define:vars={{ color }}>
    .hamburger {
        display: flex;
        flex-direction: column;
        cursor: pointer;
        width: 40px;
    }

    .hamburger .line {
        width: 100%;
        height: 5px;
        margin-top: 5px;
        margin-bottom: 5px;
        background-color: var(--color);
    }
</style>
