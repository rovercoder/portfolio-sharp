---
interface Props {
    lineMarginTopBottom: string;
    lineHeight: string;
    color: string;
}
const { 
    lineMarginTopBottom: hamburgerLineMarginTopBottom, 
    lineHeight: hamburgerLineHeight, 
    color: hamburgerColor 
} = Astro.props;
---

<div class="hamburger">
    <div class="line line1"></div>
    <div class="line line2"></div>
    <div class="line line3"></div>
</div>

<style define:vars={{ hamburgerColor, hamburgerLineMarginTopBottom, hamburgerLineHeight }}>
    .hamburger {
        display: flex;
        flex-direction: column;
        cursor: pointer;
        width: calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3));
        height: calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3));
    }

    .hamburger .line {
        width: 100%;
        height: var(--hamburgerLineHeight);
        margin-top: var(--hamburgerLineMarginTopBottom);
        margin-bottom: var(--hamburgerLineMarginTopBottom);
        background-color: var(--hamburgerColor);
        transition: 0.3s ease-in-out;
    }
</style>

<style is:global define:vars={{ hamburgerLineMarginTopBottom, hamburgerLineHeight }}>
    .overlay-open .hamburger .line1 {
        transform: translateY(calc(var(--hamburgerLineMarginTopBottom) + var(--hamburgerLineHeight) + var(--hamburgerLineMarginTopBottom))) rotate(45deg) scaleX(calc(hypot(calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3)), calc(calc(var(--hamburgerLineMarginTopBottom) * 2) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 2))) / calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3))));
    }

    .overlay-open .hamburger .line2 {
        transform: rotate(45deg) scaleX(calc(hypot(calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3)), calc(calc(var(--hamburgerLineMarginTopBottom) * 2) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 2))) / calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3))));
    }

    .overlay-open .hamburger .line3 {
        transform: translateY(calc(-1 * calc(var(--hamburgerLineMarginTopBottom) + var(--hamburgerLineHeight) + var(--hamburgerLineMarginTopBottom)))) rotate(-45deg) scaleX(calc(hypot(calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3)), calc(calc(var(--hamburgerLineMarginTopBottom) * 2) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 2))) / calc(calc(var(--hamburgerLineMarginTopBottom) * 3) + calc(var(--hamburgerLineHeight) * 3) + calc(var(--hamburgerLineMarginTopBottom) * 3))));
    }
</style>
