---
interface Props {
    link: string;
    name: string;
    hoverFocusBackgroundColor: string;
}
const { link, name, hoverFocusBackgroundColor } = Astro.props;
---

<a href={link}>{name}</a>

<style lang="scss" define:vars={{ hoverFocusBackgroundColor }}>
    @use '/src/styles/variables.scss' as *;

    a {
        display: block;
        text-align: center;
        padding: 10px 0;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    @media screen and (min-width: $mobileBreakpoint) {
        a {
            display: inline-block;
            padding: 15px 20px;
        }
    }

    a:hover,
    a:focus {
        background-color: var(--hoverFocusBackgroundColor);
    }
</style>
