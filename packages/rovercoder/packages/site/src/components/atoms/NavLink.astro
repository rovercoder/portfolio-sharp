---
interface Props {
    link: string;
    textColor: string;
    hoverFocusTextColor: string;
    hoverFocusBackgroundColor: string;
    textAlign?: string;
    textMinimumWidth?: string;
    padding?: string;
}
const { 
    link, 
    textColor: navLinkTextColor, 
    hoverFocusTextColor: navLinkHoverFocusTextColor, 
    hoverFocusBackgroundColor: navLinkHoverFocusBackgroundColor, 
    textAlign: navLinkTextAlign = 'center', 
    textMinimumWidth: navLinkTextMinimumWidth, 
    padding: navLinkPadding 
} = Astro.props;
---

<a href={link}><div class="link-text"><slot /></div></a>


<style lang="scss" define:vars={{ navLinkTextColor, navLinkHoverFocusTextColor, navLinkHoverFocusBackgroundColor, navLinkTextAlign, navLinkTextMinimumWidth, navLinkPadding }}>
    @use '/src/styles/variables.scss' as *;

    a {
        display: flex;
        align-items: center;
        flex-direction: column;
        text-decoration: none;
        color: var(--navLinkTextColor);
        padding: var(--navLinkPadding);
    }

    a .link-text {
        text-align: var(--navLinkTextAlign);
        min-width: var(--navLinkTextMinimumWidth);
    }

    @media screen and (min-width: $mobileBreakpoint) {
        a {
            display: inline-flex;
        }
    }

    a:hover,
    a:focus {
        color: var(--navLinkHoverFocusTextColor);
        background-color: var(--navLinkHoverFocusBackgroundColor);
    }
</style>
