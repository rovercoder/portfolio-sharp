---
interface Props {
    link: string;
    name: string;
}
const { link, name } = Astro.props;
---

<a href={link}>{name}</a>

<style lang="scss">
    @use '/src/styles/variables.scss' as *;

    a {
        display: block;
        text-align: center;
        padding: 10px 0;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bold;
        text-transform: uppercase;
    }

    @media screen and (min-width: $mobile-breakpoint) {
        a {
            display: inline-block;
            padding: 15px 20px;
        }
    }
</style>
