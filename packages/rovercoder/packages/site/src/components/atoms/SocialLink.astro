---
interface Props {
  profileUrl: string;
  platformName: string;
  username: string;
}
const { profileUrl, platformName, username } = Astro.props;
---
<a href={profileUrl}>{platformName} [{username}]</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>
