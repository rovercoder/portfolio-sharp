---
interface Props {
    containerHeight?: string;
    padding?: string;
    margin?: string;
    borderRadius?: string;
    backgroundColor?: string;
    opacityInactive?: string;
}
const { 
    containerHeight: imageBrowserOverlayActionButtonContainerHeight = 'auto',
    padding: imageBrowserOverlayActionButtonPadding = '1rem',
    margin: imageBrowserOverlayActionButtonMargin = '0.5rem',
    borderRadius: imageBrowserOverlayActionButtonBorderRadius = '.75rem',
    backgroundColor: imageBrowserOverlayActionButtonBackgroundColor = '#00000000',
    opacityInactive: imageBrowserOverlayActionButtonOpacityInactive = '0.5'
} = Astro.props;
---

<div class="action-button-container">
    <div class="action-button">
        <slot name="image" />
    </div>
</div>

<style define:vars={{ imageBrowserOverlayActionButtonContainerHeight, imageBrowserOverlayActionButtonPadding, imageBrowserOverlayActionButtonMargin, imageBrowserOverlayActionButtonBorderRadius, imageBrowserOverlayActionButtonBackgroundColor, imageBrowserOverlayActionButtonOpacityInactive }}>
    .action-button-container {
        height: var(--imageBrowserOverlayActionButtonContainerHeight);
        display: flex;
        flex-direction: column;
        align-content: center;
        justify-content: center;
        transition: 0.1s ease-in-out;
        opacity: var(--imageBrowserOverlayActionButtonOpacityInactive);
    }

    .action-button-container:hover, .action-button-container:active {
        opacity: 1;
    }

    .action-button {
        padding: var(--imageBrowserOverlayActionButtonPadding);
        margin: var(--imageBrowserOverlayActionButtonMargin);
        border-radius: var(--imageBrowserOverlayActionButtonBorderRadius);
        background-color: var(--imageBrowserOverlayActionButtonBackgroundColor);
    }
</style>
