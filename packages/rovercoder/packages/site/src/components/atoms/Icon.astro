---
import Image from './Image.astro';
interface Props {
    url?: string | undefined;
	color?: string | undefined;
	size?: string | undefined;
    imageSize?: string | undefined;
	borderRadius?: string | undefined;
    containerPadding?: string | undefined;
    containerMargin?: string | undefined;
}
const { url, color, size, imageSize, borderRadius, containerPadding, containerMargin } = Astro.props;
---

<Image url={url} color={color} width={size} height={size} imageSize={imageSize} borderRadius={borderRadius} containerPadding={containerPadding} containerMargin={containerMargin} />