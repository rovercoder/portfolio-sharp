---
import BackgroundImage from './BackgroundImage.astro';

interface Props {
    imageUrl?: string | undefined;
	color?: string | undefined;
	imageRepeat?: string | undefined;
	imageSize?: string | undefined;
	borderRadius?: string | undefined;
    type?: string | undefined;
}
const { imageUrl, color, imageRepeat, imageSize, borderRadius, type } = Astro.props;
---

{
    imageUrl == null || imageUrl.toString().trim().length == 0
        
        ?   <div class="background">
                <slot />
            </div>
        
        :   <BackgroundImage backgroundUrl={imageUrl} backgroundColor={color} backgroundRepeat={imageRepeat} backgroundSize={imageSize} backgroundBorderRadius={borderRadius} type={type}>
                <slot />
            </BackgroundImage>
}

<style define:vars={{ color, borderRadius }}>
    .background {
        background-color: var(--color);
        border-radius: var(--borderRadius);
    }
</style>
