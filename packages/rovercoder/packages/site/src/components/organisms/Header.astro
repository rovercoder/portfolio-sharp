---
import { prepareInlineScript } from '../../helpers/scripts';


// import ThemeIcon from './ThemeIcon.astro';
interface Props {
    backgroundColor: string;
}
const { backgroundColor } = Astro.props;
---

<header>
    <nav>
        <div class="logo-container-container"><slot name="logo" /></div>
        <!-- <ThemeIcon /> -->
        <div class="nav-links-container"><slot name="navigation" /></div>
        <div class="hamburger-container"><slot name="hamburger" /></div>
    </nav>
</header>
<script>
    import "/src/scripts/menu.ts";
</script>
<script is:inline set:html={await prepareInlineScript("/src/scripts/.tsc-build/header.js")} />

<style lang="scss" define:vars={{ backgroundColor }}>
    @use '/src/styles/variables.scss' as *;

    header {
        background-color: var(--backgroundColor);
        width: 100%;
    }

    header nav {
        display: inline-flex;
        justify-content: space-between;
        width: 100%;
        height: inherit;
    }

    .nav-links-container {
        flex-grow: 1;
    }

    .logo-container-container {
        display: flex;
        align-items: center;
        align-self: center;
        padding: 2vh;
        height: inherit;
    }

    .nav-links-container {
        padding: 2vh;
    }

    .hamburger-container {
        display: flex;
        align-items: center;
        align-self: center;
        padding: 2vh;
        height: inherit;
    }

    @media screen and (min-width: $mobileBreakpoint) {
        .hamburger-container {
            display: none;
        }
    }
</style>
