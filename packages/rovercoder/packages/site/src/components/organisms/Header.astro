---
import { prepareInlineScript } from '../../helpers/scripts';


// import ThemeIcon from './ThemeIcon.astro';
interface Props {
    backgroundColor: string;
}
const { 
    backgroundColor: headerBackgroundColor 
} = Astro.props;
---

<header>
    <nav>
        <div class="logo-container-container"><slot name="logo" /></div>
        <!-- <ThemeIcon /> -->
        <div class="nav-links-container"><slot name="navigation" /></div>
        <div class="hamburger-container"><slot name="hamburger" /></div>
    </nav>
    <div class="overlay overlay-navigation-menu" aria-hidden="true">
        <slot name="navigationMenu" />
    </div>
</header>
<script>
    import "/src/scripts/menu.ts";
</script>
<script is:inline set:html={await prepareInlineScript("/src/scripts/.tsc-build/header.js")} />

<style lang="scss" define:vars={{ headerBackgroundColor }}>
    @use '/src/styles/variables.scss' as *;

    header {
        background-color: var(--headerBackgroundColor);
        width: 100%;
    }

    header nav {
        display: inline-flex;
        justify-content: space-between;
        width: 100%;
        height: inherit;
    }

    .nav-links-container {
        flex-grow: 1;
    }

    .logo-container-container {
        display: flex;
        align-items: center;
        align-self: center;
        padding: 2vh;
        height: inherit;
    }

    .nav-links-container {
        padding: 2vh;
    }

    .hamburger-container {
        display: flex;
        align-items: center;
        align-self: center;
        padding: 2vh;
        height: inherit;
    }

    header .overlay:not(.shown) {
        display: none;
    }
</style>

<style lang="scss" is:global>
    @use '/src/styles/variables.scss' as *;

    @media screen and (min-width: $mobileBreakpoint) {
        .overlay-navigation-menu {
            display: none !important;
        }
        /** :not doesn't work alone. Needs html in front of it. */
        html:not(.overlay-open) .hamburger-container {
            display: none;
        }
    }

    @media screen and (max-width: calc($mobileBreakpoint - 1px)) {
        .nav-links-container {
            display: none;
        }
    }

    .overlay-open .nav-links-container {
        display: none;
    }
</style>
