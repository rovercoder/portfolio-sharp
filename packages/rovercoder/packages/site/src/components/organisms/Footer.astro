---
interface Props {
    backgroundColor: string;
}
const { 
    backgroundColor: footerBackgroundColor 
} = Astro.props;
---

<footer>
    <slot name="social-links" />
</footer>

<style define:vars={{ footerBackgroundColor }}>
    footer {
        display: flex;
        gap: 1rem;
        /* margin-top: 2rem; */
        padding: 1rem;
        align-items: start;
        background-color: var(--footerBackgroundColor);
    }
</style>
