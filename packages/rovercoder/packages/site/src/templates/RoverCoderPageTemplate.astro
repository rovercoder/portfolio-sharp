---
import type { NavLinkEntry } from "../components/atoms/NavLink.types";
import type { SiteLogoProperties } from "../components/atoms/SiteLogo.types";
import type { SocialLinkEntry } from "../components/atoms/SocialLink.types";
import BaseLayout from "../layouts/BaseLayout.astro";
import RoverCoderFooter from "./components/organisms/RoverCoderFooter.astro";
import RoverCoderHeader from "./components/organisms/RoverCoderHeader.astro";

const headerLogoImageRoverCoder: SiteLogoProperties = {
	alt: "RoverCoder Logo",
	source: "./assets/images/site/logos/rovercoder-alt-color.svg"
};
const navLinksRoverCoder: NavLinkEntry[] = [
	{ link: "/", name: "Home" }
];
const socialLinksRoverCoder: SocialLinkEntry[] = [
	{ platformName: "twitter", profileUrl: "https://www.twitter.com/astrodotbuild", username: "astrodotbuild" },
	{ platformName: "github", profileUrl: "https://www.github.com/withastro", username: "withastro" },
	{ platformName: "youtube", profileUrl: "https://www.youtube.com/astrodotbuild", username: "astrodotbuild" }
];
interface Props { 
	pageTitle: string;
	headerLogoImage?: SiteLogoProperties;
	navLinks?: NavLinkEntry[];
	socialLinks?: SocialLinkEntry[];
}
const { pageTitle, headerLogoImage = headerLogoImageRoverCoder, navLinks = navLinksRoverCoder, socialLinks = socialLinksRoverCoder } = Astro.props;
---
<BaseLayout pageTitle={pageTitle}>
	<RoverCoderHeader slot="header" logoImage={headerLogoImage} navLinks={navLinks} />
	<slot />
	<RoverCoderFooter slot="footer" socialLinks={socialLinks} />
</BaseLayout>
