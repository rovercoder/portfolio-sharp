---
import RoverCoderText from "../atoms/RoverCoderText.astro";

interface Props {
    content: string;
    color?: string | undefined;
    background?: string | undefined;
    textAlign?: string | undefined;
}

var { 
    content, 
    color, 
    background: statisticTextBackground, 
    textAlign: statisticTextTextAlign
} = Astro.props;

if (color == null || color?.toString().trim().length === 0) {
    color = "#FFFFFF";
}

if (statisticTextBackground == null || statisticTextBackground?.toString().trim().length === 0) {
    statisticTextBackground = undefined;
}

if (statisticTextTextAlign == null || statisticTextTextAlign?.toString().trim().length === 0) {
    statisticTextTextAlign = 'center';
}

const statisticTextPadding = "1rem clamp(1rem, 5vw, 2rem)";

---

<div class="statistic">
    <RoverCoderText content={content} type="statistic" color={color} />
</div>

<style define:vars={{ statisticTextPadding, statisticTextBackground, statisticTextTextAlign }}>
    .statistic {
        padding: var(--statisticTextPadding);
        background: var(--statisticTextBackground);
        text-align: var(--statisticTextTextAlign);
    }
</style>
