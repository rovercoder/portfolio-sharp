---
import ImageBrowserOverlayStatusBar from "../../../components/molecules/ImageBrowserOverlayStatusBar.astro";
import RoverCoderImageBrowserOverlayActionButtonImage from "../atoms/RoverCoderImageBrowserOverlayActionButtonImage.astro";
import RoverCoderText from "../atoms/RoverCoderText.astro";
interface Props {
    actionIndicatorsPadding?: string;
    actionIndicatorsOpacityInactive?: string;
    backgroundColor?: string;
    progressIndicatorTextColor?: string;
    progressIndicatorGap?: string;    
    progressIndicatorPadding?: string;
    progressIndicatorMargin?: string;
    progressIndicatorBorderRadius?: string;
    progressIndicatorBackgroundColor?: string;
}

const { 
    actionIndicatorsPadding = '0.125rem',
    actionIndicatorsOpacityInactive = '0.5',
    backgroundColor = '#1C1C1C',
    progressIndicatorTextColor = '#000000',
    progressIndicatorGap = '0.25rem',
    progressIndicatorPadding = '0.125rem 0.375rem',
    progressIndicatorMargin = '0.125rem',
    progressIndicatorBorderRadius = '2rem',
    progressIndicatorBackgroundColor = '#C3C3C3',
} = Astro.props;
---

<ImageBrowserOverlayStatusBar 
        actionIndicatorsPadding={actionIndicatorsPadding} 
        actionIndicatorsOpacityInactive={actionIndicatorsOpacityInactive}
        progressIndicatorGap={progressIndicatorGap} 
        progressIndicatorPadding={progressIndicatorPadding} 
        progressIndicatorMargin={progressIndicatorMargin} 
        progressIndicatorBorderRadius={progressIndicatorBorderRadius}
        progressIndicatorBackgroundColor={progressIndicatorBackgroundColor}
        backgroundColor={backgroundColor}
>
    <RoverCoderText slot="progress-indicator-index" content="0" type="image-browser-progress-indicator-index" color={progressIndicatorTextColor} />
    <RoverCoderText slot="progress-indicator-of" content="of" type="image-browser-progress-indicator-of" color={progressIndicatorTextColor} />
    <RoverCoderText slot="progress-indicator-total" content="0" type="image-browser-progress-indicator-total" color={progressIndicatorTextColor} />
    <RoverCoderImageBrowserOverlayActionButtonImage slot="action-previous" type="previous" />
    <RoverCoderImageBrowserOverlayActionButtonImage slot="action-next" type="next" />
</ImageBrowserOverlayStatusBar>
