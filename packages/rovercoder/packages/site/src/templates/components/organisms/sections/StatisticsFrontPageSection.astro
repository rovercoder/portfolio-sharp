---
import Section from "../../../../components/organisms/Section.astro";
import type { FlexProperties } from "../../../../components/organisms/Section.types";
import type { BackgroundProperties } from "../../../../components/helpers/Background.types";

const padding = "clamp(1.5rem, 7vw, 2.1875rem)";

const backgroundProperties: BackgroundProperties = {
    backgroundColor: '#0B0B0B'
};

const displayProperties: FlexProperties = {
	display: 'flex',
	flexDirection: 'row',
    flexWrap: 'wrap',
    justifyContent: 'space-around',
    alignItems: 'flex-start',
    alignContent: 'center',
    gap: '1.5rem 1rem'
};
---

<Section padding={padding} backgroundProperties={backgroundProperties} displayProperties={displayProperties}>
    <slot name="statistic" />
</Section>
