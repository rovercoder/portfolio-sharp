---
import Text from '../../../components/atoms/Text.astro';

interface Props {
    content: string | string[];
    type?: string | undefined;
    color: string;
    isParagraph?: boolean | undefined;
    gap?: string | undefined;
}
const { content, type, color, isParagraph, gap } = Astro.props;

let fontFamily = 'Inter';
let fontSize = '0.8125rem';
let fontWeight = 400;
let fontStyle = 'normal';
let letterSpacing = 'normal';
let lineHeight = `calc(${fontSize} * 1.5)`;
switch (type) {
    case 'card-title':
        fontSize = '0.9375rem';
        lineHeight = `calc(${fontSize} * 1.5)`;
        fontWeight = 500;
        break;
    case 'statistic':
        fontSize = 'clamp(1rem, 7vw, 2rem)';
        lineHeight = `calc(${fontSize} * 1.5)`;
        fontWeight = 400;
        break;
    case 'navigation-link':
        fontSize = '1.2rem';
        lineHeight = `calc(${fontSize} * 1.5)`;
        fontWeight = 700;
        break;
    case 'image-browser-progress-indicator-index':
    case 'image-browser-progress-indicator-total':
        fontWeight = 500;
        lineHeight = fontSize;
        break;
    case 'image-browser-progress-indicator-of':
        fontWeight = 400;
        lineHeight = fontSize;
        break;
    case 'card-description': 
    case 'image-browser-image-description':
    default: break;
}
---

<Text 
    content={content} 
    fontFamily={fontFamily} 
    fontSize={fontSize} 
    color={color}
    fontWeight={fontWeight} 
    fontStyle={fontStyle} 
    letterSpacing={letterSpacing} 
    lineHeight={lineHeight}
    isParagraph={isParagraph}
    gap={gap}
/>
