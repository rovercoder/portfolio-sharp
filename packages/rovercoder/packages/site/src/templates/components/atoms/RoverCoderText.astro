---
import Text from '../../../components/atoms/Text.astro';

interface Props {
    content: string | string[];
    type?: string | undefined;
    color: string;
    isParagraph?: boolean | undefined;
}
const { content, type, color, isParagraph } = Astro.props;

var fontFamily = 'Inter';
var fontSize = '0.8125rem';
var fontWeight = 400;
var fontStyle = 'normal';
var letterSpacing = 'normal';
switch (type) {
    case 'card-title':
        fontSize = '0.9375rem';
        fontWeight = 500;
        break;
    case 'statistic':
        fontSize = 'clamp(1rem, 7vw, 2rem)';
        fontWeight = 400;
        break;
    case 'navigation-link':
        fontSize = '1.2rem';
        fontWeight = 700;
    case 'card-description': 
    default: break;
}
---

<Text 
    content={content} 
    fontFamily={fontFamily} 
    fontSize={fontSize} 
    color={color}
    fontWeight={fontWeight} 
    fontStyle={fontStyle} 
    letterSpacing={letterSpacing} 
    isParagraph={isParagraph}
/>
